-#  This file is app/views/movies/index.html.haml
%h1 All Movies

%table#movies
  %thead
    %tr
      %th{:class => ('hilite' if params[:title] == "asc")}= link_to 'Movie Title', movies_path(:title => 'asc'), :id => 'titles_header'
      %th Rating
      %th{:class => ('hilite' if params[:release_date] == "asc")}= link_to 'Release Date', movies_path(:release_date => 'asc'), :id => 'date_header'
      %th More Info
  %tbody
    - @movies.each do |movie|
      %tr
        %td= movie.title 
        %td= movie.rating
        %td= movie.release_date
        %td= link_to "More about #{movie.title}", movie_path(movie)

= link_to 'Add new movie', new_movie_path
